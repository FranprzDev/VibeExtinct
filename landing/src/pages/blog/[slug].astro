---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';

const { slug } = Astro.params;

let post = null;
let error = null;

if (!slug) {
    return Astro.redirect('/blog');
}

try {
    const { data, error: dbError } = await supabase
        .from('posts')
        .select('*')
        .eq('slug', slug)
        .single();
    
    if (dbError) {
        console.error("Supabase Error:", dbError);
        error = "Post not found or system error.";
    } else {
        post = data;
    }
} catch (e) {
    error = "Connection failed.";
}

if (!post && !error) {
    error = "Post not found.";
}

const title = post ? `${post.title} | VibeExtinct` : "Error | VibeExtinct";
---

<Layout title={title}>
    <main class="min-h-screen pt-32 pb-20 px-6">
        <div class="max-w-4xl mx-auto">
             <a href="/blog" class="text-orange-500 hover:text-white mb-8 inline-block uppercase tracking-widest text-sm">‚Üê Intel Feed</a>

            {error ? (
                <div class="p-8 border border-red-500 bg-red-500/10 text-center">
                    <h1 class="text-3xl font-bold text-red-500 mb-4">ACCESS DENIED</h1>
                    <p>{error}</p>
                </div>
            ) : (
                <article>
                    <div class="mb-12 text-center">
                        <div class="text-gray-500 font-mono text-sm mb-4">{new Date(post.created_at).toLocaleDateString()}</div>
                        <h1 class="text-4xl md:text-6xl font-black mb-8 leading-tight">{post.title}</h1>
                        {post.image_url && (
                            <div class="w-full aspect-video rounded overflow-hidden border border-white/10 mb-8">
                                <img src={post.image_url} alt={post.title} class="w-full h-full object-cover" />
                            </div>
                        )}
                    </div>
                    
                    <div class="prose prose-invert prose-lg max-w-none text-gray-300">
                        {/* Basic rendering of text content. For rich text, marked or similar would be needed. */}
                        {post.content.split('\n').map((paragraph: string) => (
                            <p class="mb-6">{paragraph}</p>
                        ))}
                    </div>
                </article>
            )}
        </div>
    </main>
</Layout>
